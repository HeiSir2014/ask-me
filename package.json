{
  "name": "ask-me",
  "version": "1.0.1",
  "description": "Interactive prompt tool for AI agents - continuous work loop",
  "type": "module",
  "module": "src/index.ts",
  "bin": {
    "ask-me": "./src/index.ts",
    "ask": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "build": "bun build ./src/index.ts --outfile=dist/ask-me.js --target=bun",
    "compile": "bun run scripts/build.ts",
    "compile:windows": "bun run scripts/build.ts --target=bun-windows-x64 --outfile=dist/windows-x64/ask-me.exe",
    "compile:linux": "bun run scripts/build.ts --target=bun-linux-x64 --outfile=dist/linux-x64/ask-me",
    "compile:macos:x64": "bun run scripts/build.ts --target=bun-darwin-x64 --outfile=dist/macos-x64/ask-me",
    "compile:macos:arm64": "bun run scripts/build.ts --target=bun-darwin-arm64 --outfile=dist/macos-arm64/ask-me",
    "compile:all": "bun run compile:windows && bun run compile:linux && bun run compile:macos",
    "format": "prettier --write \"**/*.{cpp,ts,js,json,md,yml,yaml}\" --end-of-line lf"
  },
  "keywords": [
    "cli",
    "ai",
    "agent",
    "cursor",
    "prompt",
    "interactive"
  ],
  "author": "",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "zod": "^4.2.1"
  }
}
